manifest {
    mainScript = './main.nf'
}

// default parameters
params {
    cpus = "1"
    memory = '12'
    help = false
    profile = false

    // Inputs (considered as dir)
    ont = './nanopore'
    illumina = './illumina'

    // Databases
    checkm_db = false
    checkm_tar_db = false
    sour_db = false

    // Options
    skip_ill_qc = false
    skip_ont_qc = false
    short_qc = "2000"
    filtlong = false
    polish_threshold = ""
    polish_iteration = 3
    skip_metabat2 = false
    skip_maxbin2 = false
    skip_concoct = alse

    // Output
    output = './results'
    assembly = false
    out_qc = false
    out_metabat = false
    out_concoct = false
    out_maxbin = false
    out_metawrap = false
    out_bin_reads = false
}

profiles {
    standard {

    }

    conda {
        process.executor = 'conda'
        docker.enabled=false
        process {
            withLabel : fastp { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::fastp'}
            withLabel : filtlong { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::filtlong'}
            withLabel : sourmash { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::sourmash'}
            withLabel : spades { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::spades'}
            withLabel : flye { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::flye'}
            withLabel : pilon { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::pilon '}
            withLabel : minimap2 { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::minimap2 bioconda::samtools'}
            withLabel : bwa { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::bwa bioconda::samtools'}
            withLabel : metabat2 { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::metabat2'}
            withLabel : maxbin2 { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::maxbin2'}
            withLabel : concoct { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::concoct'}
            withLabel : checkm { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::checkm-genome'}
            withLabel : metawrap { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::metawrap biocondda::checkm-genome '}
            withLabel : seqtk { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::seqtk bioconda::samtools '}
            withLabel : unicycler { cpus = param.cpus ; memory = param.memory
            conda = 'bioconda::unicycler '}
            // withLabel : { cpus = param.cpus ; memory = param.memory
            // conda = 'bioconda:: '}
        }
    }

}